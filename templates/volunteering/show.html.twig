{% extends 'base.html.twig' %}

{% block title %}Volunteering{% endblock %}

{% block body %}
    <div class="container flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title">
                            <h1 class="fw-bold" style="color: limegreen;">{{ volunteering.conference.name }}</h1>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between mt-4">
                                <div>
                                    <p>{{ volunteering.forUser.email }} volunteered from <span
                                            class="fw-semibold">{{ volunteering.startAt|date('d/m/y') }}</span> to
                                        <span class="fw-semibold">{{ volunteering.endAt|date('d/m/y') }}</span></p>
                                    <p class="my-0">Conference: <a href="{{ path('app_conference_show', {id: volunteering.conference.id}) }}">{{ volunteering.conference.name }}</a></p>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted">Status</span>
                            <span class="badge bg-secondary">{{ volunteering.status.value }}</span>
                        </li>
                    </ul>
                    <div class="card-footer">
                        {# Available transition buttons #}
                        <div class="d-flex gap-2 flex-wrap">
                            {% for transition in workflow_transitions(volunteering) %}
                                <form action="{{ path('app_volunteering_transition', {
                                    id: volunteering.id,
                                    transition: transition.name
                                }) }}" method="POST">
                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                        {{ transition.name|replace({'_': ' '})|title }}
                                    </button>
                                </form>
                            {% endfor %}
                        </div>

                        {# Blockers for unavailable transitions #}
                        {% for name in ['approve', 'activate', 'complete', 'cancel'] %}
                            {% if not workflow_can(volunteering, name) %}
                                {% for blocker in workflow_transition_blockers(volunteering, name) %}
                                    <div class="alert alert-warning mt-2 mb-0 py-1 px-2 small">
                                        {{ name|capitalize }} : {{ blocker.message }}
                                    </div>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
